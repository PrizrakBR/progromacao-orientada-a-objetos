import java.util.ArrayList;
import java.util.List;

class Usuario {
    private String nome;
    private ListaDeAmigos listaDeAmigos;
    private Biblioteca biblioteca;
    private ListaDeDesejos listaDeDesejos;

    public Usuario(String nome) {
        this.nome = nome;
        this.listaDeAmigos = new ListaDeAmigos();
        this.biblioteca = new Biblioteca();
        this.listaDeDesejos = new ListaDeDesejos();
    }

    public String getNome() {
        return nome;
    }

    public void adicionarAmigo(Usuario amigo) {
        listaDeAmigos.adicionarAmigo(amigo);
    }

    public void comprarJogo(Jogo jogo) {
        biblioteca.adicionarJogo(jogo);
    }

    public void adicionarJogoDesejado(Jogo jogo) {
        listaDeDesejos.adicionarJogoDesejado(jogo);
    }

    public void filtrarCatalogoNovidades(Novidades novidades) {
        System.out.println("Mostrando as novidades:");
        novidades.mostrarNovidades();
    }

    public void filtrarCatalogoGenero(Genero genero) {
        System.out.println("Mostrando jogos por gênero:");
        genero.mostrarJogosPorGenero();
    }

    public void filtrarCatalogoDesenvolvedor(Desenvolvedor desenvolvedor) {
        System.out.println("Mostrando jogos por desenvolvedor:");
        desenvolvedor.mostrarJogosPorDesenvolvedor();
    }
}

class ListaDeAmigos {
    private List<Usuario> amigos;

    public ListaDeAmigos() {
        amigos = new ArrayList<>();
    }

    public void adicionarAmigo(Usuario amigo) {
        amigos.add(amigo);
    }
}

class Biblioteca {
    private List<Jogo> jogos;

    public Biblioteca() {
        jogos = new ArrayList<>();
    }

    public void adicionarJogo(Jogo jogo) {
        jogos.add(jogo);
        System.out.println("Jogo '" + jogo.getNome() + "' adicionado à sua biblioteca!");
    }
}

class Comprar {
    // Classe de compra de jogos
}

class Catalogo {
    // Classe principal para acessar catálogo
}

class Jogo {
    private String nome;
    // Outros atributos e métodos relacionados a um jogo

    public Jogo(String nome) {
        this.nome = nome;
    }

    public String getNome() {
        return nome;
    }
}

class ListaDeDesejos {
    private List<Jogo> jogosDesejados;

    public ListaDeDesejos() {
        jogosDesejados = new ArrayList<>();
    }

    public void adicionarJogoDesejado(Jogo jogo) {
        jogosDesejados.add(jogo);
        System.out.println("Jogo '" + jogo.getNome() + "' adicionado à sua lista de desejos!");
    }
}

class Novidades {
    public void mostrarNovidades() {
        System.out.println("Novo jogo 1");
        System.out.println("Novo jogo 2");
        System.out.println("Novo jogo 3");
    }
}

class Genero {
    public void mostrarJogosPorGenero() {
        System.out.println("Jogo do gênero A");
        System.out.println("Jogo do gênero B");
        System.out.println("Jogo do gênero C");
    }
}

class Desenvolvedor {
    public void mostrarJogosPorDesenvolvedor() {
        System.out.println("Jogos do desenvolvedor X");
        System.out.println("Jogos do desenvolvedor Y");
        System.out.println("Jogos do desenvolvedor Z");
    }
}

public class LojaJogosOnline {
    public static void main(String[] args) {
        // Exemplo de uso do sistema
        Usuario usuario1 = new Usuario("Usuario1");
        Usuario usuario2 = new Usuario("Usuario2");
        usuario1.adicionarAmigo(usuario2);
        System.out.println("Usuário1 adicionou Usuário2 à sua lista de amigos.");

        Jogo jogo1 = new Jogo("Jogo1");
        usuario1.comprarJogo(jogo1);

        Jogo jogo2 = new Jogo("Jogo2");
        usuario1.adicionarJogoDesejado(jogo2);

        Novidades novidades = new Novidades();
        usuario1.filtrarCatalogoNovidades(novidades);

        Genero genero = new Genero();
        usuario1.filtrarCatalogoGenero(genero);

        Desenvolvedor desenvolvedor = new Desenvolvedor();
        usuario1.filtrarCatalogoDesenvolvedor(desenvolvedor);
    }
}
